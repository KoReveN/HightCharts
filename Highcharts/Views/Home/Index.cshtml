@helper Tooltip(string text)
{
    /**/

    if (text.Length < 35)
    {
<span class="tooltiptext tooltip-small">@text</span>}
    else if (text.Length < 60)
    {
<span class="tooltiptext tooltip-medium">@text</span>}
    else
    {
<span class="tooltiptext tooltip-large">@text</span>}
}

<script>
   // $(document).ready(

        var tooltip_short =  '@Tooltip("Tooltip text from html helper")',
            tooltip_medium =  '@Tooltip("Tooltip text from html helper and some more text for medium")',
            tooltip_long =  '@Tooltip("Tooltip text from html helper and some more text for medium large and some more text for large size")';

        $('.value-header').each(function () {
            switch (getRandomInt(0, 3)) {
                case 1: this.innerHTML += tooltip_short;
